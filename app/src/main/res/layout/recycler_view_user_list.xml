<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/shape_recycler_view_card">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/recycler_view_margin_horizontal"
            android:layout_marginLeft="@dimen/recycler_view_margin_horizontal"
            android:layout_marginEnd="@dimen/recycler_view_margin_horizontal"
            android:layout_marginRight="@dimen/recycler_view_margin_horizontal"
            android:layout_marginTop="@dimen/recycler_view_margin_vertical"
            android:src="@drawable/ic_unselect" />


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recycler_view_margin_vertical"
            android:layout_marginLeft="@dimen/recycler_view_margin_horizontal"
            android:layout_marginStart="@dimen/recycler_view_margin_horizontal"
            android:layout_marginTop="@dimen/recycler_view_margin_vertical"
            android:text="Name: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_font_size" />

        <TextView
            android:id="@+id/textViewNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewName"
            android:layout_toEndOf="@+id/textViewName"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toRightOf="@+id/textViewName"
            android:layout_toStartOf="@+id/imageView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_font_size" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_marginBottom="@dimen/recycler_view_margin_vertical"
            android:layout_marginLeft="@dimen/recycler_view_margin_horizontal"
            android:layout_marginStart="@dimen/recycler_view_margin_horizontal"
            android:text="Email ID: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_font_size" />

        <TextView
            android:id="@+id/textViewEmailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewEmail"
            android:layout_marginBottom="@dimen/recycler_view_margin_vertical"
            android:layout_toRightOf="@+id/textViewEmail"
            android:layout_toEndOf="@+id/textViewEmail"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/list_font_size" />


    </RelativeLayout>

</LinearLayout>